<TelaLogin>:
    name: 'login'
    
    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 20
        canvas:
            Color:
                rgba: 0.06, 0.09, 0.16, 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        # Logo e t√≠tulo
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.3
            spacing: 10
            
            Label:
                text: 'CAMBIO'
                font_size: 48
                bold: True
                color: 0.23, 0.51, 0.96, 1
                size_hint_y: 0.6
                
            Label:
                text: 'CAMBIO BANK'
                font_size: 28
                bold: True
                color: 1, 1, 1, 1
                size_hint_y: 0.2
                
            Label:
                text: 'Sistema Premium de C√¢mbio'
                font_size: 14
                color: 0.80, 0.84, 0.88, 1
                size_hint_y: 0.2
        
        # Card do formul√°rio
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.6
            padding: 20
            canvas:
                Color:
                    rgba: 0.12, 0.16, 0.23, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10,]
            
            Label:
                text: 'ACESSO AO SISTEMA'
                font_size: 18
                bold: True
                color: 1, 1, 1, 1
                size_hint_y: 0.15
            
            # Campo usu√°rio
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.2
                spacing: 5
                
                Label:
                    text: 'Usu√°rio:'
                    font_size: 12
                    bold: True
                    color: 1, 1, 1, 1
                    size_hint_y: 0.3
                    halign: 'left'
                    text_size: self.width, None
                
                TextInput:
                    id: usuario
                    hint_text: 'Digite seu usu√°rio'
                    font_size: 16
                    multiline: False
                    size_hint_y: 0.7
                    background_color: 0.20, 0.25, 0.33, 1
                    foreground_color: 1, 1, 1, 1
                    cursor_color: 1, 1, 1, 1
                    padding: [10, 10]
                    write_tab: False
                    focus: True  # üî• ADICIONE ESTA LINHA - cursor come√ßa piscando aqui
                    on_text_validate: root.fazer_login()
            
            # Campo senha
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.2
                spacing: 5
                
                Label:
                    text: 'Senha:'
                    font_size: 12
                    bold: True
                    color: 1, 1, 1, 1
                    size_hint_y: 0.3
                    halign: 'left'
                    text_size: self.width, None
                
                TextInput:
                    id: senha
                    hint_text: 'Digite sua senha'
                    font_size: 16
                    multiline: False
                    password: True
                    size_hint_y: 0.7
                    background_color: 0.20, 0.25, 0.33, 1
                    foreground_color: 1, 1, 1, 1
                    cursor_color: 1, 1, 1, 1
                    padding: [10, 10]
                    write_tab: False
                    on_text_validate: root.fazer_login_por_enter()
            
            # Bot√£o entrar
            Button:
                text: 'ENTRAR NO SISTEMA'
                font_size: 14
                bold: True
                size_hint_y: 0.15
                background_color: 0.23, 0.51, 0.96, 1
                color: 1, 1, 1, 1
                on_press: root.fazer_login()
            
            # Bot√µes adicionais
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.3
                spacing: 8
                padding: [0, 10, 0, 0]
                
                Button:
                    text: 'Criar Nova Conta'
                    font_size: '12sp'
                    size_hint_y: 0.4
                    background_color: 0.55, 0.36, 0.96, 1
                    color: 1, 1, 1, 1
                    on_press: root.abrir_cadastro()  # üî• VOLTE PARA ESTE
                
                Button:
                    text: 'Esqueci minha senha'
                    font_size: '12sp'
                    size_hint_y: 0.4
                    background_color: 0.20, 0.25, 0.33, 1
                    color: 0.80, 0.84, 0.88, 1
                    on_press: root.abrir_recuperacao()
        
        # Informa√ß√µes demo
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.1
            spacing: 5
            
            Label:
                text: 'Seu Banco de C√¢mbio Confi√°v√©l'
                font_size: 10
                color: 0.80, 0.84, 0.88, 1
                text_size: self.width, None
                halign: 'center'
            
            Label:
                text: 'Sistema Premium ¬© 2024'
                font_size: 9
                color: 0.80, 0.84, 0.88, 1